{
    "name": "memoria-clew-server",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "ts-node --esm src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
        "test:watch": "jest --watch",
        "lint": "tsc --noEmit",
        "docker:build": "docker build -t memoria-mcp .",
        "docker:run": "docker run -p 3001:3001 --env-file .env memoria-mcp"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.0",
        "express": "^4.18.0",
        "firebase-admin": "^12.0.0",
        "helmet": "^7.1.0",
        "pino": "^8.16.0",
        "rate-limiter-flexible": "^5.0.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.0",
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "cross-env": "^10.1.0",
        "jest": "^29.0.0",
        "supertest": "^6.3.0",
        "ts-jest": "^29.0.0",
        "ts-node": "^10.0.0",
        "typescript": "^5.3.0"
    }
}
